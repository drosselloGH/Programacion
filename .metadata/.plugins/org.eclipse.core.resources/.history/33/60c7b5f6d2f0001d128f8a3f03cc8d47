package ejercicios;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;

import javax.swing.JFileChooser;

public class Ejer05 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner (System.in);
		System.out.println("Qu√© palabra quieres buscar?");
		String palabra = sc.nextLine();
		
		JFileChooser elegir = new JFileChooser();
		
		int eleccion = elegir.showOpenDialog(null);
		
		if(eleccion == JFileChooser.CANCEL_OPTION) {
			return;
		}
		
		File archivo = elegir.getSelectedFile();
		
		try {
			FileReader lectorArchivo = new FileReader(archivo);
			
			BufferedReader buffer = new BufferedReader(lectorArchivo);
			
			int cantPalabra = 0;
			
			String linea = buffer.readLine();
			if(linea.indent(palabra)) {
				
			}
			
			while (linea != null) {
				
			}
			
			buffer.close();
			
		} catch (FileNotFoundException e) {
			System.out.println("No se ha encontrado el archivo");
		} catch (IOException e) {
			System.out.println("No se ha podido leer el archivo");
		}
		
	}
	
}
